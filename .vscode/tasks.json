{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-db",
      "type": "shell",
      "osx": {
        "command": "./mvnw"
      },
      "windows": {
        "command": ".\\mvnw"
      },
      "linux": {
        "command": "./mvnw"
      },
      "args": ["-f", "svqk-container", "-P", "setup", "compile"],
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "start-backend",
      "type": "shell",
      "osx": {
        "command": "./mvnw"
      },
      "windows": {
        "command": ".\\mvnw"
      },
      "linux": {
        "command": "./mvnw"
      },
      "args": ["-f", "svqk-backend", "quarkus:dev"],
      "problemMatcher": []
    },
    {
      "label": "gen-doc",
      "type": "shell",
      "osx": {
        "command": "./mvnw"
      },
      "windows": {
        "command": ".\\mvnw"
      },
      "linux": {
        "command": "./mvnw"
      },
      "args": ["-f", "svqk-doc", "-P", "gen-doc"],
      "problemMatcher": []
    },
    {
      "label": "migrate-db",
      "type": "shell",
      "osx": {
        "command": "./mvnw"
      },
      "windows": {
        "command": ".\\mvnw"
      },
      "linux": {
        "command": "./mvnw"
      },
      "args": ["-f", "svqk-migration", "compile", "-P", "setup"],
      "problemMatcher": []
    },
    {
      "label": "build-backend-image",
      "type": "shell",
      "osx": {
        "command": "./mvnw"
      },
      "windows": {
        "command": ".\\mvnw"
      },
      "linux": {
        "command": "./mvnw"
      },
      "args": ["-f", "svqk-backend", "package", "-P", "setup"],
      "problemMatcher": []
    },
    {
      "label": "start-frontend",
      "type": "shell",
      "command": "pnpm",
      "args": ["-C", "svqk-frontend", "dev", "--open"],
      "problemMatcher": []
    },
    {
      "label": "generate",
      "type": "shell",
      "command": "pnpm",
      "args": ["-C", "svqk-generator", "generate"],
      "problemMatcher": []
    },
    {
      "label": "dry-run",
      "type": "shell",
      "command": "pnpm",
      "args": ["-C", "svqk-e2etest", "dry-run", "${input:spec.ts}"],
      "problemMatcher": []
    },
    {
      "label": "show-e2etest-report",
      "type": "shell",
      "command": "pnpm",
      "args": ["-C", "svqk-e2etest", "playwright-show-report"],
      "problemMatcher": []
    },
    {
      "label": "watch-i18n-compile",
      "type": "shell",
      "command": "pnpm",
      "args": ["-C", "svqk-e2etest", "run", "watch:paraglide"],
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": { "runOn": "folderOpen" }
    }
  ],
  "inputs": [
    {
      "id": "spec.ts",
      "type": "promptString",
      "description": "Enter spec.ts file for dry-run",
      "default": ""
    }
  ]
}
